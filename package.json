{
  "name": "happy-java",
  "displayName": "happy-java",
  "description": "happy writing java",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:java",
    "workspaceContains:**/pom.xml",
    "workspaceContains:**/build.gradle"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "happy-java.happyJava",
        "title": "Happy Java"
      },
      {
        "command": "happy-java.navigateToBean",
        "title": "happy-java: Navigate to Spring Bean"
      },
      {
        "command": "happy-java.rebuildIndex",
        "title": "happy-java: Rebuild Spring Bean Index"
      }
    ],
    "configuration": {
      "title": "Happy Java",
      "properties": {
        "happy-java.indexing.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Spring Bean indexing"
        },
        "happy-java.indexing.paths": {
          "type": "array",
          "default": [
            "src/main/java",
            "src/test/java"
          ],
          "description": "Paths to index for Spring Beans (relative to workspace root)",
          "items": {
            "type": "string"
          }
        },
        "happy-java.indexing.excludePatterns": {
          "type": "array",
          "default": [
            "**/target/**",
            "**/build/**",
            "**/.git/**",
            "**/node_modules/**"
          ],
          "description": "Glob patterns to exclude from indexing",
          "items": {
            "type": "string"
          }
        },
        "happy-java.indexing.maxCacheSize": {
          "type": "number",
          "default": 20,
          "description": "Maximum cache size in MB for Bean index"
        },
        "happy-java.indexing.debounceDelay": {
          "type": "number",
          "default": 500,
          "description": "Debounce delay in milliseconds for file change events"
        },
        "happy-java.indexing.showProgress": {
          "type": "boolean",
          "default": true,
          "description": "Show progress notification during indexing"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:coverage": "c8 --reporter=text --reporter=html --exclude='out/test/**' --exclude='**/*.test.js' npm test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "java-parser": "^3.0.1"
  }
}
